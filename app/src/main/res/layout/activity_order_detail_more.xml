<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="就诊意向"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_travelType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="意向专家"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_expertname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/view_small_margin"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
                
                
                <TextView
                        android:id="@+id/tv_hosptal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_expertname"
                        android:text=""
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_12"
                        />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_suggestion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医疗意见"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_suggestion_title"
                    android:layout_marginTop="@dimen/view_small_margin"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者姓名"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者性别"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者年龄"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在城市"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_cityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_zd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疾病诊断"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_zhenduan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/tv_zd"
                    android:gravity="right"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
            </RelativeLayout> 

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疾病描述"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/tv_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_desc"
                    android:layout_marginTop="@dimen/view_small_margin"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp" >

                <LinearLayout 
                    android:id="@+id/ll_add"
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                     android:orientation="horizontal"
                    >
                    
                    
               
                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影像资料"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/textsize_14" />
                
                
                  <Button
                        android:id="@+id/btn_upcase"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                       android:layout_toRightOf="@id/tv_image"
                       android:layout_marginLeft="6dp"
                        android:background="@drawable/button_gold_cyan_bg"
                        android:gravity="center"
                        android:text="补充图片"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_14" />
                </LinearLayout>
                 <com.dixiang.framework.bitmap.NoScrollGridView
                    android:id="@+id/noScrollgridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_add"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="@dimen/view_small_margin"
                    android:layout_marginRight="@dimen/view_small_margin"
                    android:horizontalSpacing="4dp"
                    android:numColumns="3"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:scrollbars="none"
                    android:verticalSpacing="3dp" />            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>