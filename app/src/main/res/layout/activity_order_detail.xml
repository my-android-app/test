<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_item_light_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_layout" />

    <ScrollView
        android:id="@+id/scrollview_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/all_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" 
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/anpaizhong_ic"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="安排专家中..."
                    android:textColor="@color/actionbar_bg_color" />

                <TextView
                    android:id="@+id/tv_review_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/fuzhu_brown"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="审核中"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_small_margin"
                android:layout_marginRight="@dimen/view_small_margin"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="就诊意向"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_intent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_zhuanjia_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="意向专家"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_expertname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_small_margin"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_hosptal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_expertname"
                        android:text=""
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_12"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_suggestion_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="诊疗意见"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_suggestion_title"
                        android:layout_marginTop="@dimen/view_small_margin"
                        android:lineSpacingExtra="4dp"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/rl_go_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="患者姓名"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_patientname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black2"
                        android:textSize="@dimen/textsize_15" />

                    <TextView
                        android:id="@+id/tv_go_patient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_patientname"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/go_patient_ic"
                        android:gravity="center_vertical"
                        android:text="查看详情"
                        android:textColor="@color/actionbar_bg_color"
                        android:textSize="@dimen/textsize_12" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/view_small_margin"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/view_small_margin"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间："
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_submit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/view_small_margin"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交时间："
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_submit_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_yizhiyuyuejin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_confirm_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/view_small_margin"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认时间："
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_confirm_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2016-03-26 08:30:22"
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_yizhifufuwufei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="（已支付咨询费10000元）"
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <!--
            <LinearLayout
                
                 android:id="@+id/ll_xiaojie_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/view_small_margin"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="传小结确认时间："
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/tv_xiaojie_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2016-03-26 08:30:22"
                    android:textColor="@color/btn_timing_gray"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>
            -->

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/radius_green_bg"
                android:gravity="center"
                android:text="上传照片"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:visibility="gone" />

            <include layout="@layout/activity_order_detail_xiaojie_view" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_zhifu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shengyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/actionbar_bg_color"
            android:textSize="@dimen/textsize_15" />

        <TextView
            android:id="@+id/tv_gozhifu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/actionbar_bg_color"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_15" />
    </LinearLayout>

</LinearLayout>